{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "plugins": [
            {
                "name": "@nestjs/swagger/plugin",
                "options": {
                    "dtoFileNameSuffix": [
                        ".dto.ts",
                        ".entity.ts",
                        ".schema.ts"
                    ],
                    "classValidatorShim": false
                }
            }
        ]
    }
}